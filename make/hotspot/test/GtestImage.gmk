include MakeFileStart.gmk

################################################################################

include CopyFiles.gmk

$(eval $(call SetupCopyFiles, COPY_GTEST, \
    SRC := $(HOTSPOT_OUTPUTDIR)/variant-$(JVM_VARIANT)/libjvm/gtest, \
    DEST := $(TEST_IMAGE_DIR)/hotspot/gtest/$(JVM_VARIANT), \
    FILES := $(LIBRARY_PREFIX)jvm$(SHARED_LIBRARY_SUFFIX) gtestLauncher$(EXECUTABLE_SUFFIX), \
))
TARGETS += $(COPY_GTEST)

ifeq ($(call isTargetOs, windows), true)
  $(eval $(call SetupCopyFiles, COPY_GTEST_MSVCR, \
      DEST := $(TEST_IMAGE_DIR)/hotspot/gtest/$(JVM_VARIANT), \
      FILES := $(MSVCR_DLL), \
      FLATTEN := true, \
  ))
  TARGETS += $(COPY_GTEST_MSVCR)

  $(eval $(call SetupCopyFiles, COPY_GTEST_VCRUNTIME_1, \
      DEST := $(TEST_IMAGE_DIR)/hotspot/gtest/$(JVM_VARIANT), \
      FILES := $(VCRUNTIME_1_DLL), \
      FLATTEN := true, \
  ))
  TARGETS += $(COPY_GTEST_VCRUNTIME_1)

  $(eval $(call SetupCopyFiles, COPY_GTEST_MSVCP, \
      DEST := $(TEST_IMAGE_DIR)/hotspot/gtest/$(JVM_VARIANT), \
      FILES := $(MSVCP_DLL), \
      FLATTEN := true, \
  ))
  TARGETS += $(COPY_GTEST_MSVCP)

  ifeq ($(COPY_DEBUG_SYMBOLS), true)
    $(eval $(call SetupCopyFiles, COPY_GTEST_PDB, \
        SRC := $(HOTSPOT_OUTPUTDIR)/variant-$(JVM_VARIANT)/libjvm/gtest, \
        DEST := $(TEST_IMAGE_DIR)/hotspot/gtest/$(JVM_VARIANT), \
        FILES := jvm.dll.pdb gtestLauncher.exe.pdb, \
    ))
    TARGETS += $(COPY_GTEST_PDB)
  endif
endif

################################################################################

include MakeFileEnd.gmk
